<%= render partial: 'shared/errors', locals: { target: @artist } %>

<%= bootstrap_form_for @artist do |f| %>

  <%= f.text_field :name, hide_label: true, placeholder: "Name" %>
  <%= f.text_field :image_path, hide_label: true, placeholder: "Image path" %>

  <%= f.submit "Save", class: "btn btn-success" %>
  <%= link_to "Cancel", :back, class: "btn btn-danger" %>
<% end %>
